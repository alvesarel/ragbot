# ===========================================
# Sofia Assistant - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# WhatsApp Business Cloud API (Official)
# -------------------------------------------
# Get from Meta Developer Console > WhatsApp > API Setup
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# n8n Credential Setup for Media Download (Video/Audio Transcription):
# Create an HTTP Header Auth credential named "WhatsApp Bearer Token" with:
#   - Header Name: Authorization
#   - Header Value: Bearer <your_whatsapp_access_token>

# -------------------------------------------
# Anthropic (Claude AI)
# -------------------------------------------
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# -------------------------------------------
# OpenAI (for embeddings & transcription)
# -------------------------------------------
# Get from https://platform.openai.com/api-keys
# Used for: text-embedding-3-small (RAG) + Whisper (video/audio transcription)
OPENAI_API_KEY=sk-xxxxx

# -------------------------------------------
# Supabase (Database)
# -------------------------------------------
# Get from your Supabase project settings
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJxxxxx
SUPABASE_ANON_KEY=eyJxxxxx

# -------------------------------------------
# Qdrant (Vector Database for RAG)
# -------------------------------------------
# For self-hosted: http://localhost:6333
# For cloud: https://xxxxx.qdrant.io
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=sofia_knowledge

# -------------------------------------------
# Telegram (for handoff notifications)
# -------------------------------------------
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# -------------------------------------------
# Human Support (WhatsApp Handoff)
# -------------------------------------------
# WhatsApp number for human support team notifications
# Format: country code + number (no + or spaces)
# Example: 5511999998888
HUMAN_SUPPORT_PHONE=5511999998888

# -------------------------------------------
# Yara - Executive Assistant (Telegram)
# -------------------------------------------
# Authorized user ID for Yara (get from @userinfobot on Telegram)
YARA_AUTHORIZED_USER_ID=123456789

# Sub-workflow IDs (get after importing workflows in n8n)
YARA_FETCH_PATIENTS_WORKFLOW_ID=workflow_id_here
YARA_FETCH_CHECKINS_WORKFLOW_ID=workflow_id_here

# -------------------------------------------
# Diana - Patient Check-in Agent
# -------------------------------------------
# Google Sheet ID containing patient data
PATIENT_SHEET_ID=your_google_sheet_id_here

# -------------------------------------------
# Application Settings
# -------------------------------------------
TIMEZONE=America/Sao_Paulo
