# ===========================================
# WhatsApp RAG Chatbot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# WhatsApp Business API
# -------------------------------------------
# Get these from Meta Business Suite > WhatsApp > API Setup
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# -------------------------------------------
# Anthropic (Claude AI)
# -------------------------------------------
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# -------------------------------------------
# OpenAI (for embeddings and voice transcription)
# -------------------------------------------
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# -------------------------------------------
# Supabase (Database)
# -------------------------------------------
# Get from your Supabase project settings
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJxxxxx
SUPABASE_ANON_KEY=eyJxxxxx

# -------------------------------------------
# Qdrant (Vector Database)
# -------------------------------------------
# For self-hosted: your server URL
# For cloud: https://xxxxx.qdrant.io
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=clinic_knowledge_base

# -------------------------------------------
# Google Calendar
# -------------------------------------------
# Service account credentials JSON (base64 encoded) or file path
GOOGLE_CALENDAR_CREDENTIALS={"type":"service_account",...}
GOOGLE_CALENDAR_ID=primary

# -------------------------------------------
# Telegram (for handoff notifications)
# -------------------------------------------
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# -------------------------------------------
# Email (SMTP for after-hours handoff)
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=Clinica Bot <your_email@gmail.com>
HANDOFF_EMAIL=atendimento@suaclinica.com.br

# -------------------------------------------
# Application Settings
# -------------------------------------------
# Clinic timezone
TIMEZONE=America/Sao_Paulo

# Business hours (24h format)
BUSINESS_HOURS_START=8
BUSINESS_HOURS_END=18

# Conversation timeout (minutes of inactivity before marking cold)
CONVERSATION_TIMEOUT_MINUTES=1440

# Rate limiting (messages per hour per phone)
RATE_LIMIT_PER_HOUR=30

# -------------------------------------------
# n8n Webhook URLs (your n8n instance)
# -------------------------------------------
N8N_BASE_URL=https://your-n8n-instance.com
N8N_WEBHOOK_PATH=/webhook/whatsapp
