    {
      "parameters": {
        "jsCode": "// Format handoff package for human review\nconst inputData = $('Execute Workflow Trigger').first().json;\nconst context = $input.first().json;\n\nconst categoryEmojis = {\n  medical: 'ðŸ¥',\n  negotiation: 'ðŸ’¼',\n  complaint: 'ðŸ˜¤',\n  request: 'ðŸ™‹',\n  frustration: 'ðŸ˜°',\n  other: 'â“'\n};\n\nconst priorityEmojis = {\n  urgent: 'ðŸš¨',\n  high: 'ðŸ”´',\n  normal: 'ðŸŸ¡',\n  low: 'ðŸŸ¢'\n};\n\n// Determine priority based on category and sentiment\nlet priority = 'normal';\nif (inputData.handoffCategory === 'medical' || inputData.sentiment === 'negative') {\n  priority = 'high';\n}\nif (inputData.handoffCategory === 'complaint' || \n    (inputData.handoffCategory === 'frustration' && inputData.sentiment === 'negative')) {\n  priority = 'urgent';\n}\n\nconst categoryEmoji = categoryEmojis[inputData.handoffCategory] || 'â“';\nconst priorityEmoji = priorityEmojis[priority];\n\n// Format last 5 messages\nconst messageHistory = context.message_history || [];\nconst lastMessages = messageHistory.slice(-5).map(m => {\n  const role = m.role === 'user' ? 'ðŸ‘¤' : 'ðŸ¤–';\n  return `${role} ${m.content.substring(0, 200)}${m.content.length > 200 ? '...' : ''}`;\n}).join('\\n\\n');\n\n// Format collected data\nconst collectedData = context.collected_data || {};\nconst dataFormatted = Object.entries(collectedData)\n  .map(([key, value]) => `â€¢ ${key}: ${value}`)\n  .join('\\n') || 'Nenhum dado coletado';\n\nconst summary = `\n${priorityEmoji} *HANDOFF ${priority.toUpperCase()}* ${categoryEmoji}\n\n*Categoria:* ${inputData.handoffCategory || 'Nao especificada'}\n*Motivo:* ${inputData.handoffReason || 'Nao informado'}\n\nðŸ“± *Telefone:* ${inputData.phoneNumber}\nðŸ‘¤ *Nome:* ${context.contact_name || collectedData.name || 'Nao informado'}\nðŸ“Š *Estagio:* ${context.current_stage}\nðŸ˜Š *Sentimento:* ${inputData.sentiment}\n\n*Ultimas mensagens:*\n${lastMessages}\n\n*Dados coletados:*\n${dataFormatted}\n`.trim();\n\n// WhatsApp Web link\nconst whatsappLink = `https://wa.me/${inputData.phoneNumber}`;\n\nreturn [{\n  json: {\n    summary,\n    priority,\n    category: inputData.handoffCategory,\n    phoneNumber: inputData.phoneNumber,\n    contactName: context.contact_name || collectedData.name,\n    whatsappLink,\n    conversationId: context.id,\n    collectedData,\n    reason: inputData.handoffReason\n  }\n}];"
      },
      "id": "format-handoff",
      "name": "Format Handoff Package",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-business-hours",
              "leftValue": "={{ new Date().getHours() >= 8 && new Date().getHours() < 18 && new Date().getDay() > 0 && new Date().getDay() < 6 }}",
              "rightValue": true,
              "operator": {
                "type": "boolean",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "if-business-hours",
      "name": "IF Business Hours",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [850, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=https://api.telegram.org/bot{{ $env.TELEGRAM_BOT_TOKEN }}/sendMessage",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"chat_id\": \"{{ $env.TELEGRAM_CHAT_ID }}\",\n  \"text\": {{ JSON.stringify($json.summary) }},\n  \"parse_mode\": \"Markdown\",\n  \"reply_markup\": {\n    \"inline_keyboard\": [\n      [\n        {\n          \"text\": \"ðŸ“± Abrir WhatsApp\",\n          \"url\": \"{{ $json.whatsappLink }}\"\n        }\n      ],\n      [\n        {\n          \"text\": \"âœ… Assumir\",\n          \"callback_data\": \"assign_{{ $json.conversationId }}\"\n        },\n        {\n          \"text\": \"ðŸ”” Lembrar em 30min\",\n          \"callback_data\": \"remind_{{ $json.conversationId }}\"\n        }\n      ]\n    ]\n  }\n}",
        "options": {}
      },
      "id": "send-telegram",
      "name": "Send Telegram Alert",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1100, 200]
    },
    {
      "parameters": {
        "fromEmail": "={{ $env.SMTP_FROM }}",
        "toEmail": "={{ $env.HANDOFF_EMAIL }}",
        "subject": "=[{{ $json.priority.toUpperCase() }}] Handoff - {{ $json.contactName || $json.phoneNumber }}",
        "emailType": "html",
        "html": "=<h2>ðŸš¨ Handoff Necessario</h2>\n\n<p><strong>Prioridade:</strong> {{ $json.priority }}</p>\n<p><strong>Categoria:</strong> {{ $json.category }}</p>\n<p><strong>Motivo:</strong> {{ $json.reason }}</p>\n\n<hr>\n\n<h3>Dados do Contato</h3>\n<p><strong>Telefone:</strong> {{ $json.phoneNumber }}</p>\n<p><strong>Nome:</strong> {{ $json.contactName || 'Nao informado' }}</p>\n\n<p><a href=\"{{ $json.whatsappLink }}\" style=\"background-color: #25D366; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;\">Abrir WhatsApp</a></p>\n\n<hr>\n\n<h3>Dados Coletados</h3>\n<pre>{{ JSON.stringify($json.collectedData, null, 2) }}</pre>\n\n<hr>\n\n<p><em>Este e um email automatico do sistema de atendimento.</em></p>",
        "options": {}
      },
      "id": "send-email",
